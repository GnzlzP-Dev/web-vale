      property="og:url"
      content="https://dominique-terapeuta.netlify.app/"
    />
    <meta
      property="og:site_name"
      content="Dominique Londoño - Terapia Respiratoria"
    />
    <meta
      property="og:image"
      content="https://dominique-terapeuta.netlify.app/images/medical-care.webp"
    />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="es_CO" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Dominique Londoño - Terapia Respiratoria a Domicilio en Medellín"
    />
    <meta
      name="twitter:description"
      content="Terapia respiratoria profesional a domicilio en Medellín. Especialista en rehabilitación pulmonar y fisioterapia respiratoria."
    />
    <meta
      name="twitter:image"
      content="https://dominique-terapeuta.netlify.app/images/medical-care.webp"
    />

    <!-- Theme Color for Mobile Browsers -->
    <meta name="theme-color" content="#10b981" />
    <meta name="msapplication-TileColor" content="#10b981" />

    <!-- PWA Manifest -->
    <link rel="manifest" href="/manifest.json" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- DNS Prefetch for External Resources -->
    <link rel="dns-prefetch" href="https://wa.me" />

    <!-- Structured Data - LocalBusiness & MedicalBusiness Schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": ["MedicalBusiness", "HealthAndBeautyBusiness"],
        "name": "Dominique Londoño - Terapia Respiratoria",
        "description": "Terapia respiratoria profesional a domicilio en Medellín. Especialista en rehabilitación pulmonar, fisioterapia respiratoria, ventilación mecánica y cuidado integral del sistema respiratorio.",
        "url": "https://dominique-terapeuta.netlify.app",
        "telephone": "+573128826551",
        "priceRange": "$$",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Medellín",
          "addressRegion": "Antioquia",
          "addressCountry": "CO"
        },
        "areaServed": {
          "@type": "City",
          "name": "Medellín",
          "containedIn": {
            "@type": "AdministrativeArea",
            "name": "Antioquia"
          }
        },
        "openingHoursSpecification": [
          {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": [
              "Monday",
              "Tuesday",
              "Wednesday",
              "Thursday",
              "Friday"
            ],
            "opens": "00:00",
            "closes": "23:59"
          },
          {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": "Saturday",
            "opens": "09:00",
            "closes": "14:00"
          }
        ],
        "hasOfferCatalog": {
          "@type": "OfferCatalog",
          "name": "Servicios de Terapia Respiratoria",
          "itemListElement": [
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Rehabilitación Pulmonar",
                "description": "Servicios respiratorios personalizados para pacientes de todas las edades, con enfoque en atención humanizada y segura."
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Fisioterapia Respiratoria",
                "description": "Técnicas manuales y ejercicios para mejorar la ventilación, movilidad torácica y eliminación de secreciones."
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Educación Respiratoria",
                "description": "Programas educativos para pacientes y familias sobre manejo de condiciones respiratorias."
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Terapia Pediátrica",
                "description": "Tratamiento especializado para niños y adolescentes con problemas respiratorios."
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Terapia Domiciliaria",
                "description": "Atención personalizada en la comodidad de tu hogar para mayor conveniencia y efectividad."
              }
            }
          ]
        }
      }
    </script>

    <!-- Structured Data - Person Schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Dominique Valeria Castro Londoño",
        "jobTitle": "Terapeuta Respiratoria",
        "description": "Terapeuta respiratoria con más de 10 años de experiencia en el área hospitalaria y especializada en el manejo de pacientes en cuidado crítico.",
        "url": "https://dominique-terapeuta.netlify.app",
        "telephone": "+573128826551",
        "alumniOf": {
          "@type": "CollegeOrUniversity",
          "name": "Universidad CES"
        },
        "worksFor": {
          "@type": "MedicalBusiness",
          "name": "Dominique Londoño - Terapia Respiratoria"
        },
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Medellín",
          "addressRegion": "Antioquia",
          "addressCountry": "CO"
        },
        "knowsAbout": [
          "Terapia Respiratoria",
          "Rehabilitación Pulmonar",
          "Fisioterapia Respiratoria",
          "Ventilación Mecánica",
          "Aerosolterapia",
          "Kinestoterapia de Tórax",
          "Oxigenoterapia",
          "Cuidado Crítico"
        ]
      }
    </script>

    <!-- Structured Data - BreadcrumbList Schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Inicio",
            "item": "https://dominique-terapeuta.netlify.app/"
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": "Servicios",
            "item": "https://dominique-terapeuta.netlify.app/#servicios"
          },
          {
            "@type": "ListItem",
            "position": 3,
            "name": "Sobre Mí",
            "item": "https://dominique-terapeuta.netlify.app/#sobre-mi"
          },
          {
            "@type": "ListItem",
            "position": 4,
            "name": "Contacto",
            "item": "https://dominique-terapeuta.netlify.app/#contacto"
          }
        ]
      }
    </script>
  </head>
