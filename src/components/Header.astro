        <!-- Mobile CTA Button -->
        <div class="pt-4 border-t border-gray-100">
          <a href="https://wa.me/573001234567" target="_blank" 
             class="flex items-center justify-center w-full bg-gradient-to-r from-primary-600 to-mint-500 text-white font-semibold py-3 px-4 rounded-full hover:from-primary-700 hover:to-mint-600 transition-all duration-200">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
