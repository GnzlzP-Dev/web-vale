      <!-- Service 4 -->
      <div class="p-8 transition-all duration-300 transform bg-white border shadow-lg group rounded-3xl hover:shadow-2xl hover:-translate-y-2 border-gray-50">
        <div class="flex items-center justify-center w-16 h-16 mb-6 transition-transform duration-300 bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl group-hover:scale-110">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
