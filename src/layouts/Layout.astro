---
import GoogleTagManager from "../components/GoogleTagManager.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <GoogleTagManager />

    <!-- Basic Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/png" href="/images/logo.png" />

    <!-- SEO Meta Tags -->
    <title>
      Dominique Londoño - Terapia Respiratoria a Domicilio en Medellín
    </title>
    <meta
      name="description"
      content="Terapia respiratoria profesional a domicilio en Medellín. Especialista en rehabilitación pulmonar, fisioterapia respiratoria, ventilación mecánica y cuidado integral del sistema respiratorio. Atención 24/7."
    />
    <meta
      name="keywords"
      content="terapia respiratoria, fisioterapia pulmonar, rehabilitación respiratoria, Medellín, Colombia, terapia a domicilio, ventilación mecánica, aerosolterapia, kinestoterapia"
    />
    <meta name="author" content="Dominique Valeria Castro Londoño" />
    <link rel="canonical" href="https://dominique-terapeuta.netlify.app/" />

    <!-- Open Graph Meta Tags -->
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Dominique Londoño - Terapia Respiratoria a Domicilio en Medellín"
    />
    <meta
      property="og:description"
      content="Terapia respiratoria profesional a domicilio en Medellín. Especialista en rehabilitación pulmonar, fisioterapia respiratoria y cuidado integral del sistema respiratorio. Atención 24/7."
    />
